<script>
	function ShowOrbital() {
		var orbitals = document.getElementsByName("orbital");
		for (var orbital in orbitals) {
			if (orbitals[orbital].checked) {
				
			}
		}
	}
	function Scale() {
		var width = document.getElementById('scale_img').value;
		var images = document.getElementsByClassName('orbital_img');
		for (img in images) {
			images[img].width = width;
		}
	}
	window.onload = function() {
		var images = document.getElementsByClassName('orbital_img');
		for (img in images) {
			images[img].width = 50;
		}
	}
</script>